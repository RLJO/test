<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_orderlines_comments"
        inherit_id="professional_templates.order_lines">
    <xpath expr="//div[@t-if='doc.project_title']" position="before">
        <div class="col-12 mt8 float-left" style="padding-left:0px; padding-right:0px;">
            <p t-if="doc.note1">
                <span t-field="doc.note1"/>
            </p>
        </div>
    </xpath>
    <xpath expr="//p[@t-if='doc.note']" position="after">
        <p t-if="doc.note2">
            <span t-field="doc.note2"/>
        </p>
    </xpath>
</template>
</odoo>
